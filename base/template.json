{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "aws_vpc_id": "{{env `AWS_VPC_ID`}}",
    "aws_subnet_id": "{{env `AWS_SUBNET_ID`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "vpc_id": "{{user `aws_vpc_id`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "source_ami": "ami-13585304",
      "instance_type": "t2.medium",
      "ssh_username": "ec2-user",
      "ssh_timeout": "600s",
      "associate_public_ip_address": true,
      "ami_name": "koding-eb-{{timestamp}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/xvda",
          "volume_size": 16,
          "delete_on_termination": true
        }
      ],
      "user_data_file": "user_data.amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "amazon-linux",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "inline": [
        "tar --create --file /tmp/amazon-linux.tar /tmp/amazon-linux/",
        "sudo tar --verbose --extract --file /tmp/amazon-linux.tar --no-overwrite-dir --keep-old-files --strip-components=3 --directory=/etc",
        "sudo yum --assumeyes makecache"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /opt",
        "sudo mkdir -p /etc/sysconfig",
        "sudo mkdir -p /etc/profile.d"
      ],
      "skip_clean": true
    },
    {
      "type": "file",
      "source": "../scripts",
      "destination": "/tmp/ami-scripts"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mv /tmp/ami-scripts /opt/ami-scripts",
        "sudo /opt/ami-scripts/000_configure_server.sh",
        "sudo /opt/ami-scripts/010_install_utilities.sh",
        "sudo /opt/ami-scripts/020_install_nginx.sh",
        "sudo /opt/ami-scripts/030_install_node.sh",
        "sudo /opt/ami-scripts/040_install_go.sh",
        "sudo /opt/ami-scripts/050_install_pip.sh",
        "sudo /opt/ami-scripts/050_install_supervisor.sh",
        "sudo /opt/ami-scripts/060_install_misc.sh",
        "sudo /opt/ami-scripts/070_install_papertrail.sh"
      ],
      "skip_clean": true
    },
    {
      "type": "shell",
      "script": "snort.sh",
      "execute_command": "{{ .Vars }} sudo -E '{{ .Path }}'"
    }
  ]
}
