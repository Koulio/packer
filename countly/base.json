{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "aws_vpc_id": "{{env `AWS_VPC_ID`}}",
    "aws_subnet_id": "{{env `AWS_SUBNET_ID`}}",
    "countly_bucket": "{{env `COUNTLY_BUCKET`}}",
    "source_ami": "ami-f60d8ee1",
    "ami_name": "countly",
    "ami_description": "Countly AMI",
    "region": "us-east-1",
    "instance_type": "m3.xlarge"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "vpc_id": "{{user `aws_vpc_id`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "source_ami": "{{user `source_ami`}}",
      "ami_name": "{{user `ami_name`}}-{{timestamp}}",
      "ami_description": "{{user `ami_description`}}",
      "region": "{{user `region`}}",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "ec2-user",
      "ssh_timeout": "600s",
      "associate_public_ip_address": true,
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/xvda",
          "volume_size": 12,
          "delete_on_termination": true
        }
      ],
      "tags": {
        "Name": "{{user `ami_name`}}-{{timestamp}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../scripts",
      "destination": "/tmp/ami-scripts"
    },
    {
      "type": "shell",
      "environment_vars": [
        "SCRIPTS_DIR=/opt/ami-scripts",
        "COUNTLY_BUCKET={{user `countly_bucket`}}",
        "AWS_ACCESS_KEY_ID={{user `aws_access_key`}}",
        "AWS_SECRET_ACCESS_KEY={{user `aws_secret_key`}}"
      ],
      "execute_command":"{{ .Vars }} sudo -E /bin/bash {{ .Path }}",
      "inline": [
        "mkdir -p /opt",
        "mv /tmp/ami-scripts /opt/ami-scripts",
        "source /opt/ami-scripts/export_env_var.sh",
        "/opt/ami-scripts/000_configure_server.sh",
        "/opt/ami-scripts/010_install_setup_tools.sh",
        "/opt/ami-scripts/010_install_utilities.sh",
        "/opt/ami-scripts/011_install_openssl.sh",
        "/opt/ami-scripts/012_install_http2.sh",
        "/opt/ami-scripts/020_install_nginx.sh",
        "/opt/ami-scripts/030_install_node.sh",
        "/opt/ami-scripts/050_install_pip.sh",
        "/opt/ami-scripts/050_install_supervisor.sh",
        "/opt/ami-scripts/070_install_papertrail.sh",
        "/opt/ami-scripts/070_install_datadog.sh",
        "/opt/ami-scripts/100_install_countly.sh",
        "/opt/ami-scripts/900_cleanup.sh"
      ],
      "skip_clean": true
    }
  ]
}
